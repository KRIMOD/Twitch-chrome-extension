{
  "name": "Twitch extension",
  "version": "1.0",
  "description": "Tells you when the streamer is online",
  "permissions": ["tabs", "storage"],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "src/images/icon-16.png",
      "32": "src/images/icon-32.png",
      "64": "src/images/icon-64.png"
    }
  },
  "background": {
    "scripts": ["src/background.js"]
  }
}
